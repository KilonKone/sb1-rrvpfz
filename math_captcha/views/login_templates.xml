<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="login_layout_captcha" inherit_id="web.login" name="Login Captcha">
        <xpath expr="//div[hasclass('field-password')]" position="after">
            <div class="field-captcha">
                <label class="col-form-label" for="math_answer">What is 1 + 3?</label>
                <input type="number" name="math_answer" id="math_answer" class="form-control" required="required" autofocus="autofocus"/>
            </div>
        </xpath>
    </template>
</odoo>